<div class="comm_with_reply">
    <div class="user_comment">
      <div class="user_comment_wrap">
        <%= image_tag comment.user.avatar(:thumb) %>
        <a href="#"><span class="comment_header"><%= comment.user.username.capitalize %></span></a>

        <p class="comment_header_p"><span class="small_dot">·</span><%= distance_of_time_in_words(Time.now, comment.created_at) %></p><br/>
        <p class="user_comment_text"><%= comment.body %><p class="comment_functions_p">
      </div>
        <div class="post_functions_area comment_footer">
          <a class="thumb_btn rmv_btn unlike_broadcast" data-remote="true" data-method="get" href="/chatrooms/1/broadcasts/1/unlike">
            <span class="rmv_thumb">Thumbed up</span><p class="v_count">1</p>
          </a>
              <p class="broadcast_float_right comment_functions_p"><i class="fa fa-comments-o"></i>0 Comments<span class="small_dot">·</span><span class="small_functions_link reply_btn noselect">Reply</span></p></p>
        </div>
    </div>
        <!-- END -->
        <!-- REPLY COMMENT INPUT SECTION -->
        <div class="reply_comm_section">
            <div class="user_comment_input" id="comm_reply_input">
                <%= image_tag current_user.avatar(:thumb) %>
                <textarea placeholder="Write a comment ..." name="message" class="input_field_comment"></textarea>
                <input type="submit" value="Post Comment" class="input_comment_btn">
            </div>
        </div>
        <!-- END COMMENT INPUT -->
    </div>

