<%= simple_form_for([@room, @room.broadcasts.build], remote: true, authenticity_token: true) do |f| %>
  <%= f.input :content, label: false, placeholder: 'What is on your mind?' %>
  <%= f.button :submit, class: "input_comment_btn post_broad_btn" %>
  <%= f.input :image, input_html: { class: "broad_att_img" }, label: "Attach image" %>
<% end %>
