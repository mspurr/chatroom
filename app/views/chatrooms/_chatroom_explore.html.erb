<div class="chatroom_info_window">
    <h4>Explore</h4>
    <h5>Related chatrooms</h5>
    <div class="explore_list">
        <% Chatroom.find_random_room(5).all.each do |room| %>
        <div class="chat_ad_div">
            <%= link_to chatroom_path(room) do %>
            <h6><%= room.title %></h6>
            <div class="chat_ad_go">
                <p>Go<i class="fa fa-angle-right"></i></p>
            </div>
            <div class="chat_ad_tag">
                <i class="fa fa-tag"></i><span>League of legends</span><span class="small_dot">·</span><span>5v5</span><span class="small_dot">·</span><span>Platinum</span>
            </div>
            <div class="chat_title_info small_title_info">
                <p><i class="fa fa-gamepad"></i>League of Legends</p><span class="small_dot">·</span>
                <p><i class="fa fa-users"></i>80</p>
            </div>
            <% end %>
        </div>
        <% end %>

    </div>
    <span class="small_text_chat_ad">Can't find what you are looking for?</br>Click below to create your own chatroom.</span></br></br>
    <a href="<%= new_chatroom_path %>" class="default_div_btn"><i class="fa fa-plus"></i>Create Room</a>
</div>
