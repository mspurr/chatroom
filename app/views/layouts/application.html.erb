<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
"http://www.w3.org/TR/html4/loose.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" type="image/x-icon" href="favicon.ico" />
        <title>World's best social chatroom for gamers.</title>
        
        <%= action_cable_meta_tag %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>


        <!-- External links -->
        <%= stylesheet_link_tag "//maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" %>
        <%= stylesheet_link_tag "//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" %>
        <%= stylesheet_link_tag "//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css" %>
        <%= stylesheet_link_tag "//code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" %>

        <script src="http://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.2/modernizr.js"></script>
        <script src="https://cdn.socket.io/socket.io-1.3.3.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/masonry/3.1.2/masonry.pkgd.min.js"></script>
        <script src="//desandro.github.io/imagesloaded/imagesloaded.pkgd.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js"></script>

        <!-- Local Links -->
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

        <script>
        window.addEventListener("load", function(){
            var load_screen = document.getElementById("load_screen");
            document.body.removeChild(load_screen);
        });
        </script>

        <%= csrf_meta_tags %>
    </head>
    <body>
    <div class="se-pre-con" id="load_screen"></div>
    

    <% if user_signed_in? %>
    	<%= render 'chatrooms/navbarin' %>
    	<%= render 'chatrooms/menuleft' %>
        <% if flash[:alert] %>
            <p class="alert"><i class="fa fa-exclamation"></i><%= flash[:alert] %></p>
        <% end %>
    	<%= yield %>
    <% else %>
    	<%= render 'chatrooms/navbarout' %>
        <%= yield %>
    <% end %>


	<%= render 'chatrooms/footer' %>
	
	</body>
</html>




