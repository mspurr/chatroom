<div class="container" id="container2">
  <div class="body_fill_area">
    <h2>Viewing friendship</h2>


<div class="avatar span2">
  <%= image_for(@user_friendship.user, :small, 74) %><br /> <!-- Find me in application_helper -->
  <strong><%= @user_friendship.user.username %></strong>
</div>
<div class="avatar span2">
  <%= image_for(@user_friendship.friend, :small, 74) %><br /> <!-- Find me in application_helper -->
  <strong><%= @user_friendship.friend.username %></strong>
</div>

<p><%= @user_friendship.sub_message %></p>

<% if @user_friendship.requested? %>
  <div class="avatar span2">
    <%= form_for @user_friendship, url: accept_friendship_path(@user_friendship), method: :put do |form| %>
      <button type="submit" class="btn btn-success">
        <i class="fa fa-check"></i> Accept Friendship
      </button>
    <% end %>
  </div>
<% end %>

<% unless @user_friendship.blocked? %>
  <div class="avatar span2">
    <%= form_for @user_friendship, url: friendship_path(@user_friendship), method: :delete do |form| %>
      <button type="submit" class="btn btn-danger">
        <i class="fa fa-times"></i> Cancel Friendship
      </button>
    <% end %>
  </div>
<% end %>

<div class="avatar span2">
  <% unless @user_friendship.state == 'blocked' %>
    <%= form_for @user_friendship, url: block_friendship_path(@user_friendship), method: :put, data: { confirm: 'This action cannot be undone! Are you sure?' } do |form| %>
      <button type="submit" class="btn btn-warning">
        <i class="fa fa-ban"></i> Block User
      </button>
    <% end %>
  <% end %>

</div>
    
  </div>
</div>
