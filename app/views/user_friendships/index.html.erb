              <% if @pending_friendships.empty? %>
                <p>There are no friendships to view!</p>
              <% end %>
              <% @pending_friendships.each do |friendship| %>
                <%= render partial: 'friendship', locals: { user_friendship: user_friendship } %>
              <% end %>
            </table>
          </div>
          <div class="tab-pane fade" id="requested">
            <table class="friendship">
              <% if @requested_friendships.empty? %>
                <p>There are no friendships to view!</p>
              <% end %>
              <% @requested_friendships.each do |friendship| %>
                <%= render partial: 'friendship', locals: { user_friendship: user_friendship } %>
              <% end %>
            </table>
          </div>
          <div class="tab-pane fade" id="blocked">
            <table class="friendship">
              <% if @blocked_friendships.empty? %>
                <p>There are no friendships to view!</p>
              <% end %>
              <% @blocked_friendships.each do |friendship| %>
                <%= render partial: 'friendship', locals: { user_friendship: user_friendship } %>
              <% end %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
